@model ProductSearchResult
@{
    Layout = null; // code này để đảm bảo không có thêm 1 header trước list customer
}

<!-- Hiển thị kết quả tìm kiếm -->
<p style="margin:10px-0 10px 0">
    Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>

@if (Model.Data != null && Model.Data.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th style="width:100px">Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Đơn vị tính</th>
                    <th>Giá</th>
                    <th>Đang bán?</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <img class="profile-user-img img-responsive img-bordered"
                                 src="~/images/products/@(string.IsNullOrWhiteSpace(item.Photo) ? "nophoto1.jpg" : item.Photo)" style="width:100px">
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductDescription</td>
                        <td>@item.Unit</td>
                        <td>@item.Price.ToString("N0")</td>
                        <td>@item.IsSelling</td>
                        <td>
                            <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center" style=" color: red; margin-top: 20px; font-weight: bold;">Không tìm thấy sản phẩm tương ứng.</p>
}

<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch('#formSearch', @p)">@p</a></li>
            }
        }
    </ul>
</div>
