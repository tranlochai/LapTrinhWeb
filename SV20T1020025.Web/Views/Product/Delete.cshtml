@model SV20T1020025.DomainModels.Product
@{
    ViewBag.Title = "Xoá mặt hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Product/Delete/@Model.ProductID" method="post">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductDescription</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price.ToString("N0")</p>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh sản phẩm:</label>
                <div class="col-sm-10">
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-12">
                    &nbsp;
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-save"></i> Xác nhận xoá
                    </button>
                    <a class="btn btn-primary" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
