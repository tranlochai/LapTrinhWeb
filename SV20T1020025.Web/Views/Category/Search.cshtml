@model CategorySearchResult
@{
    Layout = null; // code này để đảm bảo không có thêm 1 header trước list 
}

<!-- Hiển thị kết quả tìm kiếm -->

    <p style="margin:10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Tên loại hàng</th>
                    <th>Mô tả</th>
                    <th style="width:100px">Ảnh</th>
                    <th style="width:65px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                    <td>
                        <img class="profile-user-img img-responsive img-bordered"
                             src="~/images/categories/@(string.IsNullOrWhiteSpace(item.Photo) ? "nophoto1.jpg" : item.Photo)" style="width:100px">
                    </td>
                        <td>
                            <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a href="~/Category?page=@p&searchValue=@Model.SearchValue">@p</a></li>
            }
        }
    </ul>
</div>
