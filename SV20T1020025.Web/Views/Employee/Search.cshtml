@model EmployeeSearchResult
@{
    Layout = null; // code này để đảm bảo không có thêm 1 header trước list customer
}

       <!-- Hiển thị kết quả tìm kiếm-->

    <p style="margin:10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> nhân viên trong tổng số <strong>@Model.PageCount</strong> trang
    </p>

    <div class="row">
        @foreach (var item in Model.Data)
        {
            <div class="col-sm-4">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">@item.FullName</h3>
                        <div class="box-tools pull-right">
                            <a class="btn btn-box-tool" href="~/Employee/Edit/@item.EmployeeID">
                                <i class="fa fa-edit text-primary"></i>
                            </a>
                            <a class="btn btn-box-tool" href="~/Employee/Delete/@item.EmployeeID">
                                <i class="fa fa-trash text-danger"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <!-- Thẻ img để hiển thị ảnh -->
                            <div class="col-sm-4">
                                <img class="profile-user-img img-responsive img-bordered"
                                     src="~/images/employees/@(string.IsNullOrWhiteSpace(item.Photo) ? "nophoto.jpg" : item.Photo)"
                                     style="width: 200px; height: 200px; object-fit: cover;">
                            </div>
                            <div class="col-sm-8">
                                <ul class="list-group list-group-unbordered">
                                    <li class="list-group-item">
                                        <i class="fa fa-birthday-cake"></i> @item.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))
                                    </li>
                                    <li class="list-group-item">
                                        <i class="fa fa-phone"></i> @item.Phone
                                    </li>
                                    <li class="list-group-item">
                                        <i class="fa fa-envelope"></i> @item.Email
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        }
    </div>

    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="~/Employee?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                }
            }
        </ul>
    </div>
